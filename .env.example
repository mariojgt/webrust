# Copy this file to `.env` and adjust credentials
DATABASE_URL=mysql://username:password@localhost:3306/webrust_app

# API Token for protected routes
API_TOKEN=my-secret-token

# Application Key (64+ chars recommended for session security)
APP_KEY=0123456789012345678901234567890123456789012345678901234567890123

# Docker Ports
APP_PORT=8000
DB_PORT=3306
REDIS_PORT=6379

# Cache Configuration
# Options: file, redis, array
CACHE_DRIVER=file
REDIS_URL=redis://127.0.0.1:6379/

# Database Configuration
# Note: The driver (mysql/postgres) is determined at compile time in src/database.rs
# This config controls the connection pool
DB_MAX_CONNECTIONS=5

# Session Configuration
# Options: memory, database
SESSION_DRIVER=memory
SESSION_LIFETIME=3600

# Logging Configuration
# Options: stack, single, stdout
LOG_CHANNEL=stack
LOG_LEVEL=debug
